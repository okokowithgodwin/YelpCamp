<%- include ('../partials/header')%>
<div class="row">
<%campgrounds.forEach((camp)=>{%>

    <div class="col-lg-3 col-md-4 ">
        <%=camp.name%>
        <div class="img-thumbnail">
            <a href="/campgrounds/<%=camp.id%>">
                <img src="<%=camp.image%>" alt="<%=camp.name%>" style="width: 100%; height: 100%;">
            </a>
                <div class="caption">
                    <p>
                        <%=camp.description.substring(0,50)%> <a href="/campgrounds/<%=camp.id%>">Read More</a>
                    </p>
                </div>           
        </div>
    </div>
<%})%>
</div>
<%- include ('../partials/footer')%>